.btn-area {
  position: fixed;
  width: 100%;
  padding-bottom: 30rpx;
  bottom: 0;
}
.transform-wrapper {
  height: 90rpx; 
  width: 90rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.transform-image {
  height: 70rpx;
  width: 70rpx;
}
.transform-hover {
  background-color: #7A7E83;
}
.video {
  width: 100%;
  height: 100%;
}
.btn-area image {
  height: 100rpx;
  width: 100rpx;
}
.btn-photo, .btn-video {
  height: 80rpx;
  width: 80rpx;
  background-color: #7A7E83;
  border-radius: 50%;
}
.btn-video {
  background-color: #C62F2F;
}
.btn-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
  width: 100rpx;
  background-color:rgba(0, 0, 0, 0);
  border: 7px solid #FFFFFE;
  border-radius: 50%;
}
.head {
  color: #FFFFFE;
  width: 100%;
  display: flex;
  justify-content: center;
}
.footer {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.icon {
  margin: 0 20rpx 20rpx;
  font-size: 32rpx;
  color: #7A7E83;
  font-weight: bold;
}
.btn-hover {
  background-color: #FFFFFE;
}
.album {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}
.video-album {
  width: 90rpx;
  height: 90rpx;
}
.comfirm {
  position: fixed;
  top: 40rpx;
  right: 40rpx;
  background-color: rgba(100, 100, 98, 0.6);
  padding: 20rpx;
  border-radius: 10rpx;
  color: #FFFFFE;
  font-weight: bold;
}
.comfirm-hover {
  background-color: #FFFFFE;
}
.seconds-left, .seconds-right{
  color: #C62F2F;
  margin: 0 0 20rpx;
  font-size: 40rpx;
  width: 80rpx;
}
.seconds-head {
  font-size: 40rpx;
  font-weight: bold;
}
.seconds-left {
  text-align: right;
  padding-right:10rpx;
}
.close {
  z-index: 100;
  position: fixed;
  top: 30rpx;
  left: 30rpx;
  width: 80rpx;
  height: 80rpx;
}
.camera {
  height: 100%;
  width: 100%;
}
.stop-btn-video {
  height: 50rpx;
  width: 50rpx;
  background-color: #C62F2F;
}